<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"

        tools:context=".Activities.ChooseGenderActivity">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteback" />
        </RelativeLayout>
        <textfont.TextViewSemiBold
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Edit Status"
            android:layout_toRightOf="@+id/rl_back"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:visibility="gone"
            android:gravity="center|left"
            android:id="@+id/tv_estatus"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/_70sdp"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_above="@+id/tv_next"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/white">
                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Status"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_status"/>
                <textfont.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tell us something about yourself"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/grey"
                    android:layout_below="@+id/tv_status"
                    android:id="@+id/tv_status_tell"/>
                <!-- your status-->
            <textfont.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_about"
                android:layout_below="@+id/tv_status_tell"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="About me"
android:textColor="@color/grey"/>
                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_about12"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_below="@+id/tv_status_tell"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="80"
                    android:textColor="@color/grey"/>
                    <textfont.EditTextViewLight
                        android:id="@+id/edit_status"
                        android:layout_width="@dimen/_270sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:maxLength="80"
                        android:gravity="top"
                        android:paddingTop="@dimen/_5sdp"
                        android:hint="Type here......"
                        android:textColorHint="@color/grey"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_below="@+id/tv_about"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey"
                    android:layout_below="@+id/edit_status"
                    android:layout_marginTop="@dimen/_3sdp"/>
                </RelativeLayout>
            <textfont.TextViewLight
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:id="@+id/tv_next"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_next"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>