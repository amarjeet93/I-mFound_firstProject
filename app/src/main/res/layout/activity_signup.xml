<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"

        tools:context=".Activities.ChooseGenderActivity">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/whiteback" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/_70sdp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tv_next"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:background="@color/white">
                <!--            //name-->
                <RelativeLayout
                    android:id="@+id/rl_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <textfont.TextViewLight
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Name"
                        android:textColor="@color/grey" />

                    <textfont.EditTextViewLight
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_below="@+id/tv_name"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter Name"
                        android:inputType="text|textCapWords"
                        android:maxLines="1"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/edit_name"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/grey" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_name"
                    android:layout_marginTop="@dimen/_15sdp">

                    <textfont.TextViewLight
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textColor="@color/grey" />

                    <textfont.EditTextViewLight
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_below="@+id/tv_email"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:hint="Enter Email"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/edit_email"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/grey" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_email"
                    android:layout_marginTop="@dimen/_15sdp">

                    <textfont.TextViewLight
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textColor="@color/grey" />

                    <textfont.TextViewLight
                        android:id="@+id/edit_birth"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_below="@+id/ti_email"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center|left"

                        android:inputType="text|textCapWords"
                        android:maxLines="1"
                        android:text="Enter Date of Birth"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_12ssp" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/edit_birth"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/grey" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_date"
                    android:layout_marginTop="@dimen/_15sdp">

                    <textfont.TextViewLight
                        android:id="@+id/tv_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Password"
                        android:textColor="@color/grey" />

                    <textfont.EditTextViewLight
                        android:id="@+id/edit_pass"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_below="@+id/tv_pass"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/_12ssp" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/edit_pass"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/grey" />
                </RelativeLayout>

            </RelativeLayout>

            <textfont.TextViewRegular
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_next"
                android:gravity="center"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>