<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"

    tools:context=".Activities.ChooseGenderActivity">
    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/whiteback" />
    </RelativeLayout>
    <textfont.TextViewSemiBold
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:text="Choose Gender"
        android:layout_toRightOf="@+id/rl_back"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:gravity="center|left"
        android:id="@+id/tv_estatus"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ff">
    <RelativeLayout
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_45sdp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/greyback"

        android:gravity="center"
        android:id="@+id/rl_female">
     <textfont.TextViewLight
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Female"
         android:textColor="@color/black"
         android:textSize="@dimen/_14ssp"/>
    </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_55sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/loginback"
            android:visibility="gone"
                android:gravity="center"
                android:id="@+id/rl_female_dark">
                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/ff"
            android:id="@+id/mm">
        <RelativeLayout
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_45sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:gravity="center"
            android:background="@drawable/greyback"

            android:id="@+id/rl_male">
            <textfont.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_55sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/loginback"

                android:id="@+id/rl_male_dark">
                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/mm"
            android:id="@+id/tt">
        <RelativeLayout
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_45sdp"
            android:padding="@dimen/_5sdp"

            android:gravity="center"
            android:background="@drawable/greyback"
            android:layout_marginTop="@dimen/_10sdp"

            android:id="@+id/rl_trans">
            <textfont.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transgender"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_55sdp"
                android:padding="@dimen/_5sdp"

                android:gravity="center"
                android:background="@drawable/loginback"
                android:layout_marginTop="@dimen/_10sdp"
android:visibility="gone"
                android:id="@+id/rl_trans_dark">
                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transgender"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
    <textfont.TextViewLight
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        android:id="@+id/tv_next"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_next"/>
</RelativeLayout>
</layout>